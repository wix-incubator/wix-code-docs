  "operations":
    [ { "name": "timeline",
        "labels": [],
        "nameParams": [],
        "params":
          [ { "name": "timelineOptions",
              "type": "wix-animations.TimeLineOptions",
              "doc": "Options to apply \n to the timeline.",
              "optional": true } ],
